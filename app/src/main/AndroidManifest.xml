<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jzd.android.jon.app">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_heart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".module.main.ui.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".module.permission.ui.PermissionActivity">
        </activity>
        <activity android:name=".module.rx.ui.RxMainActivity">
        </activity>
        <activity android:name=".module.recyclerview.ui.RecyclerViewActivity">
        </activity>
        <activity android:name=".module.loader.ui.JLoaderActivity">
        </activity>
        <activity android:name=".module.notification.ui.NotificationMainActivity">
        </activity>
        <activity
            android:name=".module.notification.ui.NotificationInfoActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".module.notification.ui.NotificationWatchActivity">
        </activity>
        <activity android:name=".module.japp.ui.JAppActivity">
        </activity>
    </application>

</manifest>