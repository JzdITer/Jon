<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JImgPreview">
        <attr name="j_img_preview_max_count" format="integer"/>
        <!-- 布局文件 -->
        <attr name="j_img_preview_item_width" format="dimension"/>
        <attr name="j_img_preview_item_height" format="dimension"/>
        <attr name="j_img_preview_layout" format="dimension"/>
        <attr name="j_img_preview_padding" format="dimension"/>
        <!-- 是否有添加按钮 -->
        <attr name="j_img_preview_add" format="boolean"/>
        <attr name="j_img_preview_delete" format="boolean"/>
    </declare-styleable>
</resources>